{
  "appName": "${JL_APP_NAME}",
  "rootDir": "${JL_APP_DATA_DIR}",
  "postgres":{
    "url": "${JL_APP_POSTGRES}",
    "debug": true
  },
  "cluster": true,
  "redis":{
    "url": "${JL_APP_REDIS}"
  },
  "hosts": {
    "main":{"addr":"api.l.jingli365.com", "port":4101},
    "place":{"addr":"t.jingli365.com", "port":4201, "www":"https://${{hosts.main.addr}}"},
    "dtask": {"addr": "l.jingli365.com", "port": 14108}
  },
  "api": {
    "debug": true,
    "remotes": [
      {
        "connect": {"host":"${{hosts.main.addr}}", "port":"${{hosts.main.port}}"},
        "modules": ["*"]
      },
      {
        "connect": {"host":"${{hosts.place.addr}}", "port":"${{hosts.place.port}}"},
        "modules": ["place"]
      },
      {
        "connect": {"host":"${{hosts.dtask.addr}}", "port": "${{hosts.dtask.port}}"},
        "modules": ["dtask_mgr"]
      }
    ]
  },
  "logger": {
    "path": "${{rootDir}}/log",
    "prefix": "${{appName}}_"
  },
  "listen": "4106"
}